{
  "name": "gmm",
  "n_gpu": 1,
  "f(x)": {
    "type": "sec_coord",
    "args": {
    }
  },
  "cv_type": "stein",
  "arch": {
    "type": "MLP",
    "args": {
      "dim": 2,
      "out_dim": 2,
      "pos_encoding_dim": 0,
      "hidden": 50,
      "blocks": 3,
      "activation": "LeakyReLU"
    }
  },
  "data": {
    "target_dist": {
      "type": "GMM",
      "args": {
        "dim": 2,
        "mu": 1,
        "sigma": "I",
        "rho": 0.5
      }
    },
    "train": {
      "batch_size": 1000,
      "num_workers": 2,
      "shuffle": false,
      "datasets": [
        {
          "type": "DistributionDataset",
          "args": {
            "mcmc_type": "ULA",
            "gamma": 0.1,
            "n_burn": 2000,
            "n_clean": 1000
          }
        }
      ]
    },
    "val": {
      "batch_size": 1000,
      "num_workers": 2,
      "shuffle": false,
      "Trials": 100,
      "datasets": [
        {
          "type": "DistributionDataset",
          "args": {
            "mcmc_type": "ULA",
            "gamma": 0.1,
            "n_burn": 2000,
            "n_clean": 1000
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 1e-2,
      "momentum": 0.1,
      "weight_decay": 0.1
    }
  },
  "loss_spec": {
    "type": "SmartLossESVM",
    "args": {
      "lag_func": "linear",
      "bn": 50,
      "reg_lambda": 1
    }
  },
  "metric": {
    "type": "LossESVM",
    "args": {
      "lag_func": "linear",
      "bn": 50,
      "reg_lambda": 1
    }
  },
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.95
    }
  },
  "trainer": {
    "epochs": 15,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min loss_esv",
    "early_stop": 30,
    "visualize": "wandb",
    "wandb_project": "NeuralESVM-HSE-HDI",
    "log_step": 5,
    "val_step": 5,
    "grad_norm_clip": 100
  }
}
