{
  "name": "banana_stein",
  "n_gpu": 1,
  "f(x)": {
    "type": "sec_coord",
    "args": {
    }
  },
  "cv_type": "stein",
  "arch": {
    "type": "MLP",
    "args": {
      "dim": 8,
      "out_dim": 8,
      "hidden": 50,
      "blocks": 3,
      "activation": "ReLU"
    }
  },
  "data": {
    "target_dist": {
      "type": "BananaShape",
      "args": {
        "dim": 8,
        "p": 100,
        "b": 0.1
      }
    },
    "train": {
      "batch_size": 5000,
      "num_workers": 2,
      "datasets": [
        {
          "type": "DistributionDataset",
          "args": {
            "mcmc_type": "ULA",
            "gamma": 0.01,
            "n_burn": 10000,
            "n_clean": 5000
          }
        }
      ]
    },
    "val": {
      "batch_size": 5000,
      "num_workers": 2,
      "Trials": 100,
      "datasets": [
        {
          "type": "DistributionDataset",
          "args": {
            "mcmc_type": "ULA",
            "gamma": 0.01,
            "n_burn": 10000,
            "n_clean": 5000
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 2e-2,
      "momentum": 0.1,
      "weight_decay": 0.1
    }
  },
  "loss_spec": {
    "type": "SmartLossESVM",
    "args": {
      "lag_func": "linear",
      "bn": 300
    }
  },
  "metric": {
    "type": "LossESVM",
    "args": {
      "lag_func": "linear",
      "bn": 300
    }
  },
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.999
    }
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min loss_esv",
    "early_stop": 25,
    "visualize": "wandb",
    "wandb_project": "NeuralESVM-HSE-HDI",
    "log_step": 5,
    "val_step": 5,
    "grad_norm_clip": 200
  }
}
