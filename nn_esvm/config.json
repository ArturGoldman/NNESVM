{
  "name": "default_config",
  "n_gpu": 1,
  "f(x)": {
    "type": "sec_coord",
    "args": {
    }
  },
  "arch": {
    "type": "MLP",
    "args": {
      "dim": 2,
      "hidden": 10,
      "blocks": 3
    }
  },
  "data": {
    "target_dist": {
      "type": "BananaShape",
      "args": {
        "dim": 2,
        "p": 100,
        "b": 0.1
      }
    },
    "train": {
      "batch_size": 100000,
      "num_workers": 2,
      "datasets": [
        {
          "type": "DistributionDataset",
          "args": {
            "mcmc_type": "ULA",
            "gamma": 0.01,
            "n_burn": 100000,
            "n_clean": 1000000
          }
        }
      ]
    },
    "val": {
      "batch_size": 100000,
      "num_workers": 2,
      "Trials": 100,
      "datasets": [
        {
          "type": "DistributionDataset",
          "args": {
            "mcmc_type": "ULA",
            "gamma": 0.01,
            "n_burn": 100000,
            "n_clean": 1000000
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 2e-4,
      "momentum": 0.1,
      "weight_decay": 0.1
    }
  },
  "loss_spec": {
    "type": "LossESVM",
    "args": {
      "lag_func": "linear",
      "bn": 300
    }
  },
  "lr_scheduler": {
    "type": "ExponentialLR",
    "args": {
      "gamma": 0.999
    }
  },
  "trainer": {
    "epochs": 20,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min loss_spec",
    "early_stop": 25,
    "visualize": "wandb",
    "wandb_project": "NeuralESVM-HSE-HDI",
    "log_step": 5,
    "val_step": 5
  }
}
